<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/register_verify_mail_layout"
    android:background="@drawable/main_picture"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_gold"
            android:text="Отлично! \nОсталось только подтвердить свой почтовый адрес!"
            android:textSize="15sp"
            android:fontFamily="@font/artifika"
            android:editable="false"
            android:textAlignment="center"
            tools:ignore="Deprecated" />


        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darker_gold"
            android:text="На вашу почту было отправлено письмо.\n Для подтверждения следуйте инструкциям из письма"
            android:textSize="10sp"
            android:fontFamily="@font/artifika"
            android:editable="false"
            android:textAlignment="center"
            tools:ignore="Deprecated" />

    </LinearLayout>

</androidx.cardview.widget.CardView>