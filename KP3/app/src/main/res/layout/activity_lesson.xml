<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_picture"
    android:layout_height="match_parent"
    tools:context=".LessonActivity">


    <TextView
        android:id="@+id/text_bottom_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bad_script"
        android:text="@string/sign_string"
        android:textAlignment="center"
        android:textColor="@color/sign_gold"
        android:textSize="8sp"
        tools:ignore="RelativeOverlap,SmallSp" />


    <LinearLayout
        android:id="@+id/info_layout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_to_list_button_lesson"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:drawable="@drawable/button_signin"
            android:fontFamily="@font/artifika"
            android:text="Назад"
            android:textColor="@color/gold"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/artifika"
            android:text="Урок"
            android:id="@+id/lesson_name"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/gold"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>